<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="page-header">
        <h1>検索結果一覧</h1>
      </div>
      <div class="index-box">
        <% if @datas.empty?%>
          <p>検索結果 : 0件</p>
          <% if @model == 'user'%>
            <%= "「#{@content}」 に当てはまるデザイナーは存在しないか非表示モードとなっています"%> 
          <% else %>
             <%= "「#{@content}」 に当てはまる商品は存在しないか非表示モードとなっています"%> 
          <% end%>
        <% else %>
    　     <% if @model == 'product' %>
            <% @datas.each do |product| %>
              <div class = "index-inline-box">
                <%= link_to product_path(product.id) do %>
                  <%= attachment_image_tag product, :image, :limit, 100,100, format: 'jpeg', fallback: 'no_image.jpg',size: "200x200" %><br>
                  <%= product.name %><br>
                  <%= product.price %>円<br>
                  <%=render 'layouts/tag_list', tag_list: product.tag_list%>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <% @datas.each do |user| %>
              <div class = "index-inline-box">
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :image, :limit, 100,100, format: 'jpeg', fallback: 'no_image.jpg',size: "200x200" %><br>
                  <%= user.name %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
