<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h1>商品新規登録</h1>
    <%= form_with model:@product,local:true do |f| %>
    <%= render "layouts/error_message", model: f.object %>
      <div class="field">
       <%= f.label :イメージ画像 %>
       <%= attachment_image_tag @product, :image, fallback: 'no_image.jpg', onChange: "$('.img_field').()", class: 'center-block img_prev',:size =>'400x400'%>
      <%= f.attachment_field :image, class: 'img_field' %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_pierce, false %>
        <%= f.label :イヤリング %>
        <%= f.radio_button :is_pierce, true %>
        <%= f.label :ピアス %>
      </div>
      <div class="field row">
        <%= f.label :商品名 %>
        <%= f.text_field :name,class: "form-control" %>
      </div>
      <div class="field row">
        <%= f.label :商品説明 %>
        <%= f.text_area :explanation, class: "form-control"%>
      </div>
      <div class="field row">
        <%= f.label :税抜き価格 %>
        <%= f.text_field :price, class: "form-control"%>
      </div>
      <div class = "form-group">
        <%= f.label :タグ%>
         ※複数の場合はスペースをあけずに「,」区切りで入力してください
        <%= f.text_field :tag_list, value: @product.tag_list.join(','), class: "form-control"%>
      </div> 
      <div class="form-group">
        <%= f.radio_button :is_sold_one, false %>
        <%= f.label :片方のみの販売不可 %>
        <%= f.radio_button :is_sold_one, true %>
        <%= f.label :片方のみの販売可 %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_allergiefree, false %>
        <%= f.label :金属アレルギー非対応 %>
        <%= f.radio_button :is_allergiefree, true %>
        <%= f.label :金属アレルギー対応 %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_hidden, false %>
        <%= f.label :この商品を公開する %>
        <%= f.radio_button :is_hidden, true %>
        <%= f.label :この商品を非公開にする %>
      </div>
      <div class="actions row">
        <%= f.submit '商品を登録する', class: 'btn btn-primary col-xs-12'%>
      </div>
    <% end %>
  </div>
</div>
