<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <table class="table">
      <tr>
        <th><%= attachment_image_tag @user, :image, :limit, 300, 300, fallback: "no_image.jpg",size: "320x320" %></th>
        </tr>
      </table>
    </div>

    <div class="col-md-4 col-md-offset-1">
      <table class="table">
        <tr>
          <th>作家名 : <%= @user.name %></th>
        </tr>
        <tr>
          <%if @user.introduction.present?%>
            <th><%= @user.introduction %></th>
          <% else %>
            <th>！紹介文は未登録です</th>
          <% end %>
        </tr>
        <%if @user.homepage.present?%>
          <tr>
            <th>HP : <%= @user.homepage %></th>
          <tr>
          <% end %>
          <% if @user.instagram.present? %>
          <tr>
            <th>instagram  <i class="fab fa-instagram"></i> : <%= @user.instagram %></th>
          </tr>
          <% end %>
          <%if !(@user.homepage.present? || @user.instagram.present?)%>
          <tr>
            <th>！リンクは未登録です</th>
          </tr>
          <% end %>
        </tr>
      </table>
      <%=link_to'この作家の商品一覧へ', products_path(@user), user_id: @user.id%>
    </div>
  </div>
</div>

