<h1>新規会員登録</h1>
<div class="form-body">
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group has-icon">
      <%= f.radio_button :is_designer, false %>
      <%= f.label :viewerモード %>
      <%= f.radio_button :is_designer, true %>
      <%= f.label :designerモード %>
    </div>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputName">氏名</label>
      <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"例) 山田あかね"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputEmail">メールアドレス</label>
      <%= f.email_field :email, class:"form-control", id:"inputEmail"%>
      <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputPassword">パスワード</label>
      <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
      <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputConfirmPassword">パスワード(確認用)</label>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword"%>
      <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
    </div>
    <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <% end %>
</div>